<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>HuayraOcho</name>
  <author>Claudio "malefico" Andaur &lt;malefico3d@huayra.conectarigualdad.gob.ar&gt; </author>
  <copyright>&#194; CENITAL 2015 - ConectarIgualdad</copyright>
  <date>Diciembre 25, 2014</date>
  <description>Tema Huayra Ocho. Un tema para combinar con el tema Huayra Ocho de iconos. Conectar Igualdad. http://huayra.conectarigualdad.gob.ar</description>
</info>

<!-- define constants -->
<constant name="IconTitleSpacing" value="10"/> <!-- Space between menu button and title -->
<constant name="AnchoBoton" value="9"/> <!-- Button width -->
<constant name="AltoBoton" value="9"/>

<!-- Parametros generales para ventana "normal" -->
<frame_geometry name="normal" title_scale="large" rounded_top_left="false" rounded_top_right="false">
  <distance name="left_width" value="1"/>
  <distance name="right_width" value="1"/>
  <distance name="bottom_height" value="2"/>
  <distance name="left_titlebar_edge" value="1"/>
  <distance name="right_titlebar_edge" value="4"/>
  <aspect_ratio name="button" value="1.00"/>
  <distance name="title_vertical_pad" value="4"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="1" right="4" top="5" bottom="0"/>
</frame_geometry>


<!-- <frame_geometry name="normal" title_scale="small" rounded_top_left="true" rounded_top_right="true">
  <distance name="left_width" value="3"/>
  <distance name="right_width" value="3"/>
  <distance name="bottom_height" value="3"/>
  <distance name="left_titlebar_edge" value="4"/>
  <distance name="right_titlebar_edge" value="4"/>
