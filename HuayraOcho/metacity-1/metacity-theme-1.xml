		<title color="#aaf9af" x="15" y="0 `max` ((height-title_height)/2)"/>
    </draw_ops>
  </piece>

  <piece position="titlebar">
    <draw_ops>
	<!-- se define un gradiente vertical de dos tonos de violeta, aunque se pueden añadir cuantos colores se desee. Type tambien puede ser "horizontal" o "diagonal" -->  
	<gradient type="vertical" x="0" y="0" width="width" height="height">
		<color value="#37abc8" />
		<color value="#37abc8" />
 	</gradient>
    </draw_ops>
  </piece>
  <piece position="left_edge">
	<draw_ops>
	<gradient type="vertical" x="0" y="0" width="2" height="height">
		<color value="#37abc8" />
		<color value="#37abc8" />
